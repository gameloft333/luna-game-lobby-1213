# version: '3.8'

services:
  web:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: game-lobby-web
    ports:
      - "9080:80"
      - "9443:443"
    restart: unless-stopped
    networks:
      - app-network
    volumes:
      - ./config/nginx/ssl.conf:/etc/nginx/ssl/ssl.conf:ro
    environment:
      - DOMAIN=${DOMAIN:-localhost}
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9080"]
      interval: 30s
      timeout: 10s
      retries: 3

networks:
  app-network:
    name: luna-game-lobby-1213_app-network
    external: true
